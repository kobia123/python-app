apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: python-app
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/kobia123/python-app.git   # âœ… your repo
    targetRevision: main                                 # branch name
    path: charts/python-app                              # path to your Helm chart
    helm:
      values: |
        image:
          repository: your-dockerhub-user/python-app     # update with your Docker image
          tag: latest
        service:
          port: 8080
  destination:
    server: https://kubernetes.default.svc
    namespace: default
  syncPolicy:
    automated: {}
